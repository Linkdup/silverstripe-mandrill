{
    "name": "lekoala/silverstripe-mandrill",
    "description": "Adds mandrill in the SilverStripe CMS",
    "type": "silverstripe-module",
    "keywords": [
        "silverstripe",
        "mandrill",
        "module",
        "cms"
    ],
    "license": "MIT",
    "authors": [{
        "name": "LeKoala",
        "email": "thomas@lekoala.be"
    }],
    "support": {
        "issues": "https://github.com/lekoala/silverstripe-mandrill/issues"
    },
    "require": {
        "php": ">=5.6",
        "silverstripe/framework": "^4.0",
        "composer/ca-bundle": "^1.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^5.7",
        "squizlabs/php_codesniffer": "^3.0"
    },
    "extra": {
        "installer-name": "mandrill",
        "expose": [
            "images"
        ]
    },
    "autoload": {
        "psr-4": {
            "LeKoala\\Mandrill\\": "code/",
            "LeKoala\\Mandrill\\Test\\": "tests/"
        }
    },
    "scripts": {
        "lint": "phpcs code/ tests/",
        "lint-clean": "phpcbf code/ tests/"
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
